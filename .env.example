# Environment Variables
# Copy this file to .env.local and fill in your values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/nss-mjcet
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nss-mjcet

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Initial Super Admin Credentials (used for first-time setup)
ADMIN_EMAIL=admin@nssmjcet.edu
ADMIN_PASSWORD=ChangeThisPassword123!
